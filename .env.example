# Microsoft Graph authentication
GRAPH_AUTH_MODE=device_code
GRAPH_TENANT_ID=
GRAPH_AUTHORITY=https://login.microsoftonline.com/consumers
GRAPH_CLIENT_ID=<your-app-client-id>
GRAPH_CLIENT_SECRET=<only-needed-for-client-credentials>
GRAPH_MAILBOX=
GRAPH_SCOPES=Mail.Read
GRAPH_PAGE_SIZE=25
GRAPH_MAIL_FOLDER=Inbox
GRAPH_INVOICE_SUBJECT_KEYWORDS=invoice;rechnung
GRAPH_INVOICE_FILENAME_PATTERNS=invoice;rechnung
GRAPH_SENDER_WHITELIST=
PROCESS_ALL_ATTACHMENTS=false
GRAPH_TOKEN_CACHE=data/msal_token_cache.bin

# Paperless-ngx API
PAPERLESS_BASE_URL=https://paperless.example.com
PAPERLESS_API_TOKEN=<your-paperless-token>
PAPERLESS_DOCUMENT_TYPE_ID=
PAPERLESS_CORRESPONDENT_ID=
PAPERLESS_TAG_IDS=
PAPERLESS_DEFAULT_TITLE_TEMPLATE={subject}
PAPERLESS_TIMEZONE=UTC

# Local persistence
ATTACHMENT_CACHE_DB=data/processed_emails.db
LOG_LEVEL=INFO
